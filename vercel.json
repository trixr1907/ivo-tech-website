{
  "buildCommand": "turbo run build",
  "outputDirectory": "apps/web/out",
  "installCommand": "pnpm install",
  "devCommand": "pnpm dev",
  "functions": {
    "apps/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
