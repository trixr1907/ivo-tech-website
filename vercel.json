{
  "buildCommand": "pnpm install \u0026\u0026 pnpm build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "devCommand": "pnpm dev",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/apps/api/api/(.*)" },
    { "source": "/docs/(.*)", "destination": "/apps/docs/(.*)" },
    { "source": "/(.*)", "destination": "/apps/web/(.*)" }
  ],
  "outputDirectory": "apps/web/.next",
  "crons": [
    {
      "path": "/api/revalidate",
      "schedule": "0 5 * * *"
    }
  ],
  "github": {
    "enabled": true,
    "silent": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
